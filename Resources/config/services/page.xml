<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/page.xml"/>
        <import resource="front/page.xml"/>
    </imports>

    <services>
        <service id="page.manager" class="WellCommerce\Bundle\PageBundle\Manager\PageManager" parent="core.manager">
            <argument type="service" id="page.repository"/>
            <argument type="service" id="page.factory"/>
        </service>
    </services>
</container>
